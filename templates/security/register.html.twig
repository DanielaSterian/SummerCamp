{% extends 'securityBase.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}

    <div class="login-container text-c animated flipInX">
        <div>
            <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
        </div>
        <h3 class="text-whitesmoke">Register </h3>
        <div class="container-content">
            {{ form_start(form) }}

            <form class="margin-t">
                <div class="form-group">
                    <label class="text-darkyellow">First Name</label>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label class="text-darkyellow">Last Name</label>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label class="text-darkyellow">Email</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label class="text-darkyellow">Profile image(JPG, PNG, JPEG)</label>
                    {{ form_row(form.imageFile) }}
                </div>
                <br>
                {{ form_end(form) }}

                <p class="text-whitesmoke text-center"><small><b>Do you have an account </b></small></p>
                <a class="text-darkyellow" href="{{ path('app_login') }}"><small>Log In</small></a>
            </form>
        </div>
    </div>

{% endblock %}