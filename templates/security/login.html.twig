        /* Text Color */
        .text-whitesmoke {
            color: black;
        }
        .text-darkyellow {
            color: rgb(190, 162, 6)
        }

        /* Lines */

        .line-b {
            border-bottom: 1px solid rgb(190, 162, 6) !important;
        }

        /* Buttons */
        .button {
            border-radius: 3px;
        }
        .form-button {
            background-color: rgb(190, 162, 6);
