{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    <h1 class="card-title py-5 text-center"> Change your password </h1>
    <div class="container">
        {{ form_start(form) }}

        <label for="inputEmail">First Name</label>
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}

        <label for="inputEmail">Last Name</label>
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}

        <label for="inputEmail">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

        <label for="inputEmail">Current Password</label>
        {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}

        <label for="inputEmail">New Password</label>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

        <label for="inputEmail">Repeat password</label>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

        <button class="btn btn-lg btn-primary" type="submit">
            Submit
        </button>
        {{ form_end(form) }}

    </div>
{% endblock %}